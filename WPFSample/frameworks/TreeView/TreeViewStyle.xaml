<Window x:Class="WPFSample.frameworks.TreeView.TreeViewStyle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSample.frameworks.TreeView"
        mc:Ignorable="d"
        Title="TreeViewStyle" Height="170" Width="100">
    <Window.Resources>
        <Style TargetType="TreeView">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TreeView Width="60" Height="150" Background="AliceBlue">
            <TreeViewItem Header="效果" IsSelected="True"/>
        </TreeView>
    </Grid>
</Window>
